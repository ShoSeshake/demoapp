.wrapper
  .sigunup-header
    .signup-logo
      Logo
  .singup-form
    =form_with(model: @user, url: adviser_create_signups_path, local: true) do |f|
      .singup-form__field
        .singup-form__field__title
          =f.label :school_id do
            所属する学校
          %span.required
            必須
        = f.collection_select :school_id, School.order(id: :desc), :id, :name, {prompt: ""},{class:"user-text-field",id:"user-school-select",required:"required"}
      .singup-form__field
        .singup-form__field__title
          チャット可能時間
          %span.required
            必須
      -Schedule.days_i18n.invert.each_with_index do |day, index|
        = f.fields_for :schedules do |s|
          .singup-form__field.schedule-box
            =s.hidden_field :day, value: index
            =s.check_box :availability, class:"singup-form__field__checkbox"
            =s.label :availability, class:"schedule-btn" do
              =day[0]
            .singup-form__field__schedule
              =s.time_select :start_time,{minute_step: 30,prompt:"" }
              から
              =s.time_select :end_time,{minute_step: 30,prompt:""}
              まで
            .singup-form__field__unable
              この曜日は予約を入れません
      =f.submit '登録する', id:"adviser-create-btn"
