.wrapper
  .sigunup-header
    .signup-logo
      Logo
  .singup-form
    =form_with(model: @user, url: schedule_signups_path, remote: false) do |f|
      .singup-form__field
        .singup-form__field__title
          =f.label :name do
            名前
          %span.required
            必須
        =f.text_field :name ,class:"user-text-field",required:"required"
      .singup-form__field
        .singup-form__field__title
          =f.label :email do
            メールアドレス
          %span.required
            必須
        =f.email_field :email,class:"user-text-field",required:"required"
      .singup-form__field
        .singup-form__field__title
          =f.label :password do
            パスワード
          %span.required
            必須
        =f.password_field :password ,class:"user-text-field",required:"required"
      .singup-form__field
        .singup-form__field__title
          =f.label :password_confirmation do
            パスワード(確認用)
          %span.required
            必須
        =f.password_field :password_confirmation ,class:"user-text-field",required:"required"
      .flex-box
        .singup-form__field
          .singup-form__field__title
            アイコン
            %span.required
              必須
          =f.label :icon do
            .image-upload
              アイコンを選択する
            =f.file_field :icon 
        .singup-form__field
          .singup-form__field__title
            背景画像
            %span.optional
              任意
          =f.label :background_image do
            .image-upload
              背景画像を選択する
            =f.file_field :background_image 
      .singup-form__field
        .singup-form__field__title
          =f.label :profile do
            プロフィール
          %span.required
            必須
        =f.text_area :profile ,class:"user-text-area",required:"required"
      =f.submit '次へ進む', id:"adviser-create-btn"
